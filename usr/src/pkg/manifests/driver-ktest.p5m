file path=kernel/drv/$(ARCH64)/ktest group=sys mode=0755
file path=kernel/drv/ktest.conf group=sys
dir  path=usr/bin
file path=usr/bin/ktest mode=0555
dir  path=usr/include
file path=usr/include/libktest.h mode=0644
